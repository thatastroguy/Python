#Goal of the code is to compute the PB statistic at the bottom for values in the rows of a csv file that one loads into the code.

import numpy as np
import pandas as pd
fc = np.math.factorial
df = pd.read_csv('PB_info.csv', names=['s', 'As', 'b', 'Ab'])   #This reads in csv file. Each row has four values.
def log10PB(s, b, As, Ab):
    s, b = int(s), int(b)
    As, Ab = np.float128(As), np.float128(Ab)
    N = s + b
    p = 1 / (1 + Ab/As)
    for row in df:
        for x in range(s,N): 
            PB = np.sum(fc(N)/(fc(x)*fc(N-x))*p**x*(1-p)**(N-x))   #statistics equation that requires the csv row values
            return np.log10(PB)
            

        
        
